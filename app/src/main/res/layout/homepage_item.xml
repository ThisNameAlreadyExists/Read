<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/itinformation_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5.0dp"
    android:paddingRight="5.0dp"
    android:paddingBottom="15.0dp">

    <TextView
        android:id="@+id/tv_article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/iv_article_img"
        android:layout_alignParentLeft="true"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginRight="8dip"
        android:layout_below="@id/tv_article_title"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_article_img"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_article_title">

        <TextView
            android:id="@+id/tv_article_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_article_posttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>


    </LinearLayout>

</RelativeLayout>